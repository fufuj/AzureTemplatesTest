{
    "handler":  "Microsoft.Compute.MultiVm",
    "version":  "0.1.0-preview",
    "parameters":  {
                       "basics":  [
                                      {
                                          "name":  "Environment",
                                          "type":  "Microsoft.Common.DropDown",
                                          "label":  "Environment",
                                          "defaultValue":  "Lab",
                                          "toolTip":  null,
                                          "constraints":  {
                                                              "allowedValues":  [
                                                                                    {
                                                                                        "label":  "Lab",
                                                                                        "value":  "lab"
                                                                                    },
                                                                                    {
                                                                                        "label":  "Integration",
                                                                                        "value":  "int"
                                                                                    },
                                                                                    {
                                                                                        "label":  "Production",
                                                                                        "value":  "pro"
                                                                                    }
                                                                                ]
                                                          }
                                                          
                                      }
                                      
                                  ],
                       "steps":  [
                        {
                            "name": "element1",
                            "type": "Microsoft.Network.VirtualNetworkCombo",
                            "label": {
                              "virtualNetwork": "Virtual network",
                              "subnets": "Subnets"
                            },
                            "toolTip": {
                              "virtualNetwork": "",
                              "subnets": ""
                            },
                            "defaultValue": {
                              "name": "vnet01",
                              "addressPrefixSize": "/16"
                            },
                            "constraints": {
                              "minAddressPrefixSize": "/16"
                            },
                            "options": {
                              "hideExisting": false
                            },
                            "subnets": {
                              "subnet1": {
                                "label": "First subnet",
                                "defaultValue": {
                                  "name": "subnet-1",
                                  "addressPrefixSize": "/24"
                                },
                                "constraints": {
                                  "minAddressPrefixSize": "/24",
                                  "minAddressCount": 12,
                                  "requireContiguousAddresses": true
                                }
                              },
                              "subnet2": {
                                "label": "Second subnet",
                                "defaultValue": {
                                  "name": "subnet-2",
                                  "addressPrefixSize": "/26"
                                },
                                "constraints": {
                                  "minAddressPrefixSize": "/26",
                                  "minAddressCount": 8,
                                  "requireContiguousAddresses": true
                                }
                              }
                            },
                            "visible": true
                          },
                                     {
                                         "name":  "Backup",
                                         "label":  "Backup",
                                         "subLabel":  {
                                                          "preValidation":  "Configure the Backup settings",
                                                          "postValidation":  "Done"
                                                      },
                                         "bladeTitle":  "Backup",
                                         "elements":  [
                                                          {
                                                              "name":  "BackupEnabled",
                                                              "type":  "Microsoft.Common.OptionsGroup",
                                                              "label":  "BackupEnabled",
                                                              "defaultValue":  "disabled",
                                                              "toolTip":  null,
                                                              "constraints":  {
                                                                                  "allowedValues":  [
                                                                                                        {
                                                                                                            "label":  "enabled",
                                                                                                            "value":  "true"
                                                                                                        },
                                                                                                        {
                                                                                                            "label":  "disabled",
                                                                                                            "value":  "false"
                                                                                                        }
                                                                                                    ]
                                                                              }
                                                          },
                                                          {
                                                              "name":  "BackupPlan",
                                                              "type":  "Microsoft.Common.DropDown",
                                                              "label":  "BackupPlan",
                                                              "defaultValue":  "Daily B1",
                                                              "toolTip":  null,                                                              
                                                              "constraints":  {
                                                                                  "allowedValues":  [
                                                                                                        {
                                                                                                            "label":  "Daily B1",
                                                                                                            "value":  "B1"
                                                                                                        },
                                                                                                        {
                                                                                                            "label":  "Weekly B2",
                                                                                                            "value":  "B2"
                                                                                                        },
                                                                                                        {
                                                                                                            "label":  "Monthly B3",
                                                                                                            "value":  "B3"
                                                                                                        }
                                                                                                    ]
                                                                              },
                                                              "visible": "[equals(steps('Backup').BackupEnabled,'true') ]"
                                                          }
                                                      ]
                                     }
                                 ],
                                "outputs":  {
                                       "BackupEnabled":  "[steps('Backup').BackupEnabled]",
                                       "BackupPlan":  "[steps('Backup').BackupPlan]",
                                       "Environment":  "[basics('Environment')]"
                                   }
                   }
}
